{
  "manifest_version": 3,
  "name": "AI Chat Co-Pilot",
  "version": "1.0.0",
  "description": "Smart reply assistant using Chrome Built-in AI (Prompt API) or fallback to proxy/Gemini.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Chat Co-Pilot"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
